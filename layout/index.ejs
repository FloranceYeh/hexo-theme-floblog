<% if (theme.cards.enable) { %>
<link rel="stylesheet" href="/css/partials/cards.css">
<% } %>
<% if (theme.cards.calendar) { %>
<link rel="stylesheet" href="/css/partials/calendar.css">
<script src="<%- url_for("/js/lib/calendar.js") %>"></script>
<% } %>

<div id="home-head">
    <img id="home-background" src="<%- theme.background %>" alt="">
    <div id="home-info">
        <h1 id="home-title"><%- config.title %></h1>
        <p id="home-description"><%- config.description %></p>
    </div>
</div>

<div id="main-wrapper" class="<% if (theme.cards.enable) { %>with-cards cards-<%- theme.cards.position %> <% } else { %>without-cards<% } %> ">
    <%if (theme.cards.enable && theme.cards.position === "left") { %>
        <div id="cards-wrapper">
            <%- partial("_partials/cards") %>
        </div>
    <% } %>
    <div id="posts-wrapper">
        <%- partial("posts") %>
    </div>
    <%if (theme.cards.enable && theme.cards.position === "right") { %>
        <div id="cards-wrapper">
            <%- partial("_partials/cards") %>
        </div>
    <% } %>
</div>
<%- partial("current") %>